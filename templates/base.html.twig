<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Garage{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    
    <body class="d-flex flex-column">
        {{ include('partials/header.html.twig') }}
        <div class="app-content flex-fill d-flex flex-row-nowrap">
            <div class="content d-flex flex-row-nowrap flex-fill py-50">
                {{ include('partials/sidebar.html.twig') }}
                <div class="flex-fill">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
        {# {% for cat, list in app.flashes %}
            {% for message in list %}
                <div class="flash flash-{{cat}}">{{ message }}</div>
            {% endfor %}
        {% endfor %} #}
        {{ include('partials/footer.html.twig') }}
    </body>
    
</html>
